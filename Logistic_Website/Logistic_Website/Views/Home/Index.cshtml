@{
    ViewData["Title"] = "Home Page";
}
    <div class="search-container">
        <div class="container">
            <div class="title-section">
                <h1>TRA CỨU LỊCH TÀU</h1>
                <h2>SCHEDULE</h2>
            </div>

            <div class="search-form">
                <form method="post" asp-controller="Home" asp-action="Search">
                    <!-- Origin field -->
                    <div class="form-row">
                        <div class="icon-circle">
                            <i class="fa-solid fa-location-dot"></i>
                        </div>
                        <div class="form-label">Origin</div>
                        <div class="form-input">
                        @* <input type="text" name="origin" placeholder="Nhập cảng đi"> *@
                            <select name="origin" class="form-control">
                                <option value="">Chọn cảng đi</option>
                            @foreach (var port in ViewBag.Ports)
                            {
                                         <option value="@port.Value">@port.Text</option>
                            }
                            </select>
                        </div>
                    </div>

                    <!-- Destination field -->
                    <div class="form-row">
                        <div class="icon-circle">
                            <i class="fa-solid fa-location-dot"></i>
                        </div>
                        <div class="form-label">Destination</div>
                        <div class="form-input">
                        @* <input type="text" name="destination" placeholder="Nhập cảng đến"> *@
                            <select name="destination" class="form-control">
                                <option value="">Chọn cảng đến</option>
                            @foreach (var port in ViewBag.Ports)
                            {
                                        <option value="@port.Value">@port.Text</option>
                            }
                            </select>
                        </div>
                    </div>

                    <!-- Date fields -->
                    <div class="form-row">
                        <div class="date-container">
                            <div class="date-group">
                                <label class="date-label">Ngày đi</label>
                                <div class="date-input-wrapper">
                                    <input type="date" name="departureDate">
                                </div>
                            </div>

                            <div class="date-group">
                                <label class="date-label">Ngày đến</label>
                                <div class="date-input-wrapper">
                                    <input type="date" name="arrivalDate">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="button-group">
                        <button type="reset" class="btn btn-clear">Clear</button>
                        <button type="submit" class="btn btn-search">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
