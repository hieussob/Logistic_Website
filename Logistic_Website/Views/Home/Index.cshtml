@{
    ViewData["Title"] = "Home Page";
}
    <div class="search-container">
        <div class="container">
            <div class="title-section">
                <h1>TRA CỨU LỊCH TÀU</h1>
                <h2>SHIPPING SCHEDULE</h2>
            </div>

            <div class="search-form">
                <form method="post" asp-controller="Home" asp-action="Search">
                    <!-- Origin field -->
                    <div class="form-row">
                        <div class="icon-circle">
                            <i class="fa-solid fa-location-dot"></i>
                        </div>
                        <div class="form-label">Origin</div>
                        <div class="form-input">
                        <input type="text" id="origin" name="origin" class="form-control" placeholder="Nhập cảng đi" autocomplete="off">
                        </div>
                    </div>

                    <!-- Destination field -->
                    <div class="form-row">
                        <div class="icon-circle">
                            <i class="fa-solid fa-location-dot"></i>
                        </div>
                        <div class="form-label">Destination</div>
                        <div class="form-input">
                        <input type="text" id="destination" name="destination" class="form-control" placeholder="Nhập cảng đến" autocomplete="off">
                            
                        </div>
                    </div>

                    <!-- Date fields -->
                    <div class="form-row">
                        <div class="date-container">
                            <div class="date-group">
                                <label class="date-label">Ngày đi</label>
                                <div class="date-input-wrapper">
                                    <input type="date" name="departureDate">
                                </div>
                            </div>

                            <div class="date-group">
                                <label class="date-label">Ngày đến</label>
                                <div class="date-input-wrapper">
                                    <input type="date" name="arrivalDate">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="button-group">
                        <button type="reset" class="btn btn-clear">Clear</button>
                        <button type="submit" class="btn btn-search">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />

        <script>
            $(document).ready(function () {
                $('#origin').autocomplete({
                    source: function (request, response) {
                        $.ajax({
                            url: '@Url.Action("GetPorts", "Home")', 
                            data: {
                                query: request.term
                            },
                            success: function (data) {
                                response(data); 
                            }
                        });
                    },
                    minLength: 1
                });

                $('#destination').autocomplete({
                    source: function (request, response) {
                        $.ajax({
                            url: '@Url.Action("GetPorts", "Home")',
                            data: {
                                query: request.term
                            },
                            success: function (data) {
                                response(data);
                            }
                        });
                    },
                    minLength: 1
                });
            });
        </script>
}




