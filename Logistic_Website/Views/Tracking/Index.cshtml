@model List<LogisticGroup>

@{
    ViewBag.Title = "Tìm kiếm hãng tàu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col">
            <div class="d-flex justify-content-between align-items-end mb-3">
                <div class="w-75">
                    <div class="d-flex flex-column">
                        <p class="text-center fw-bold" style="font-size: 31px;">Nhập tên hoặc tên viết tắt của hãng tàu</p>
                        <div class="input-group d-flex flex-row justify-content-evenly text-center">
                            <div>
                                <input type="text" id="query" class="form-control search-input" />
                            </div>
                            <div>
                                <button id="searchBtn" class="btn btn-search">SEARCH</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="route-icon col-2">
                    <img src="~/content/images/route-icon.png" class="w-100" alt="Shipping routes" />
                </div>
            </div>
            <div id="resultContainer">
                @await Html.PartialAsync("_LogisticGroup", Model)
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("searchBtn").addEventListener("click", function () {
            const value = document.getElementById("query").value
            console.log(value)
            fetch("@Url.Action("Search", "Tracking")", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(value)
            })
            .then(response => response.text())
            .then(data => {
                document.getElementById("resultContainer").innerHTML = data;
            })
        });
</script>
