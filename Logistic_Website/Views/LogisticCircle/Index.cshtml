@using Logistic_Website.Utils
@{
    var suggest = ViewBag.Suggest as List<UserInfor>;
}
<div class="container-fluid py-3">
    <div class="d-flex flex-row w-100 m-0">
        <div class="col-2 px-2 border-end d-flex flex-column justify-content-between align-items-center" style="position: sticky; top: 0; height: 100%; overflow-y: auto;">
            <div class="w-100 pb-2">
                <h3 id="header-label" class="text-center fw-bold pb-2 mb-0 text-uppercase">international logistics circle</h3>
                <div class="pb-2">
                    <button class="selectable-btn btn btn-secondary w-100 rounded-0 py-3 match-height-btn fs-6" data-action-url="@Url.Action("News")">Let every potential customer see you !</button>
                </div>
                <div class="pb-2">
                    <button class="selectable-btn btn btn-secondary w-100 rounded-0 py-3 match-height-btn fs-6" data-action-url="@Url.Action("PortCircle")">Port circle</button>
                </div>
                <div class="pb-2">
                    <button class="selectable-btn btn btn-secondary w-100 rounded-0 py-3 match-height-btn fs-6" data-action-url="@Url.Action("ServiceCircle")">Service Circle</button>
                </div>
                <div class="pb-2">
                    <button class="selectable-btn btn btn-secondary w-100 rounded-0 py-3 match-height-btn fs-6" data-action-url="@Url.Action("Review")">Review</button>
                </div>
            </div>

            <div class="w-100">
                <h4 class="fw-bold d-block text-center mb-0 py-2 " style="background-color: #f0f0f0;">Đề xuất kết nối</h4>

                <div class="pb-1" style="background-color: #f0f0f0;">
                    <button class="btn w-100 d-flex align-items-center justify-content-center gap-2 rounded-0 border-dark border-1">
                        <h6 class="text-uppercase text-light p-2 fw-bold m-auto h-100 fs-6 d-flex align-items-center justify-content-center" style="background-color:#1a2737;aspect-ratio:1/1;">Nội địa</h6>
                        <span class="flex-grow-1 text-center" style="font-size:12px">Vòng tròn giao nhận hàng hoá nội địa</span>
                    </button>
                </div>

                <div class="pb-2" style="background-color: #f0f0f0;">
                    <button class="btn w-100 d-flex align-items-center justify-content-center   gap-2 rounded-0 border-dark border-1">
                        <h6 class="h-100 d-flex align-items-center justify-content-center text-uppercase fw-bold text-light p-2 m-auto" style="aspect-ratio:1/1; background-color:#1a2737; font-size:12px;">
                            Hải Phòng
                        </h6>
                        <span class="flex-grow-1 text-center" style="font-size:12px">Vòng tròn giao nhận hàng hoá Hải Phòng</span>
                    </button>
                </div>

                <div class="pb-2" style="background-color: #f0f0f0;">
                    <button class="btn w-100 d-flex gap-2 border-0 rounded-0">
                        <img src="~/content/images/more.png" width="69px" height="69px">
                        <span class="flex-grow-1 text-center" style="font-size:12px">Khám phá thêm</span>
                    </button>
                </div>
            </div>

        </div>

        <div id="main-content" class="col-8 d-flex justify-content-start align-items-center flex-column">
        </div>
        <div class="ps-2 col-2 border-start d-flex flex-column align-items-center" style="position: sticky; top: 0; height: 100%; overflow-y: auto;">
            <div class="w-100 mb-2" style="background-color: #f1f1f1;">
                <div class="d-flex w-100 align-items-center p-2">
                    <div class="pe-2" style="width:30%;">
                        <img src="~/content/images/TrungQuynhAnhAvatar.png" alt="Alternate Text" class="w-100 h-100 rounded-circle" style="aspect-ratio:1/1;" />
                    </div>
                    <div class="flex-row" style="width:70%;">
                        <span class="fs-6 fw-bold">Trung Quỳnh Anh</span>
                        <br />
                        <span style="font-size:12px;">Công ty Cổ phần Worldwide Network Logistics Việt Nam</span>
                    </div>
                </div>
                <div class="px-2 d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column align-items-center w-25">
                        <img src="~/content/images/user_menu.png" alt="icon" width="75px" height="75px">
                        <p class="text-center mb-0" style="font-size:10px;">Cập nhật của tôi</p>
                    </div>
                    <div class="d-flex flex-column align-items-center w-25">
                        <img src="~/content/images/user_menu_1.png" alt="icon" width="75px" height="75px">
                        <p class="text-center mb-0" style="font-size:10px;">Quan tâm</p>
                    </div>
                    <div class="d-flex flex-column align-items-center w-25">
                        <img src="~/content/images/user_menu_2.png" alt="icon" width="75px" height="75px">
                        <p class="text-center mb-0" style="font-size:10px;">Thông tin</p>
                    </div>
                </div>
            </div>

            <div class="w-100 p-2 mb-2" style="background-color: #1a2737;">
                <img src="~/content/images/send_message.png" alt="Alternate Text" width="68px" height="53px" />
                <span class="fs-6 fw-bold text-light ps-3">Gửi tin nhắn</span>
            </div>

            <div class="w-100 p-2" style="background-color: #f1f1f1;">
                <span class="fs-6 d-block text-center py-1 border-bottom">Đề xuất cho bạn</span>
                @{
                    foreach (var user in suggest)
                    {
                        <div class="d-flex w-100 align-items-center p-2 border-bottom">
                            <div class="pe-2" style="width:30%;">
                                <img src="~/content/images/@user.Image" alt="Alternate Text" class="w-100 h-100 rounded-circle" style="aspect-ratio:1/1;" />
                            </div>
                            <div class="flex-row" style="width:70%;">
                                <span class="fs-6 fw-bold">@user.Name</span>
                                <br />
                                <span style="font-size:12px;">@user.Decreption</span>
                            </div>
                        </div>
                    }
                }
                <span class="fs-6 d-block text-center py-1">Xem tất cả</span>
            </div>
        </div>

    </div>
</div>
<script src="~/js/LogisticCircle.js"></script>
