@model List<Circle>
@{
}
<div class="w-100 px-4">
    <div class="d-flex mb-5" style="gap: 20px; height:60px;">
        <div class="position-relative w-100">
            <input type="text"
                   class="form-control rounded-pill px-4 pe-5 h-100"
                   placeholder="Search..." />

            <img src="~/content/images/search-icon.png"
                 alt="Search"
                 style="position: absolute; top: 50%; right: 30px; transform: translateY(-50%); width:36px; height: 36px;" />
        </div>

        <button class="btn text-light rounded-pill px-4 fw-bold fs-6" style="width:15%; background-color:#1a2737">
            Search
        </button>
    </div>
    <div class="h-100">
        @{
            var rows = (int)Math.Ceiling(Model.Count / 2.0);
            for (int i = 0; i < rows; i++)
            {
                <div class="d-flex flex-row gap-5 pb-5">
                    @foreach (var circle in Model.Skip(i * 2).Take(2))
                    {
                        <div class="pb-1 col" style="background-color: #f1f1f1;">
                            <button class="py-4 btn w-100 h-100 d-flex align-items-center gap-5 rounded-0 border-dark border-1">
                                <div>
                                    <h6 class="text-uppercase text-light p-3 fw-bold m-auto fs-6 d-flex align-items-center justify-content-center" style="background-color:#1a2737;width:7.375rem;height:7.75rem;">@circle.Name</h6>
                                </div>
                                <div class="d-flex flex-column align-items-start">
                                    <span class="flex-grow-1 text-center" style="font-size:0.9375rem">@circle.Descreption</span>
                                    <span class="flex-grow-1 text-center" style="font-size:0.9375rem">
                                        Số lượng người tham gia: @circle.PeopleJoinCount
                                    </span>
                                    <span class="flex-grow-1 text-center" style="font-size:0.9375rem">
                                        Số bài viết: @circle.ThreadCount
                                    </span>
                                </div>
                            </button>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>