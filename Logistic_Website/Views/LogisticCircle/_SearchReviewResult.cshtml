@model List<RateUserInfor>
@if (Model.Count == 0)
{
    <div class="w-100 py-3 d-flex justify-content-between align-items-center">
        <img src="~/content/images/hot.png"
             alt="Search"
             style="width:36px; height: 36px;" />

        <p class="fs-6 text-decoration-underline mb-0">Viettel Post</p>
        <p class="fs-6 text-decoration-underline mb-0">Timex</p>
        <p class="fs-6 text-decoration-underline mb-0">Bee Logistics</p>
        <p class="fs-6 text-decoration-underline mb-0">SITC</p>
        <p class="fs-6 text-decoration-underline mb-0">Sinotrans</p>
        <p class="fs-6 text-decoration-underline mb-0">ShipCo Company</p>
    </div>
    <div class="py-3">
        <img src="~/content/images/logistic_groups.png" alt="Alternate Text" class="w-100 h-100" />
    </div>
    <div class="py-3" style="background-color:#f1f1f1">
        <div class="d-flex w-100 align-items-center p-2 gap-2">
            <div class="pe-2">
                <img src="~/content/images/TrungQuynhAnhAvatar.png" alt="Alternate Text" class="rounded-circle" width="68px;" height="68px;" />
            </div>
            <div class="flex-row">
                <div class="fs-6 fw-bold">Trung Quỳnh Anh</div>
                <div style="font-size:0.625rem;">Công ty Cổ phần Worldwide Network Logistics Việt Nam</div>
            </div>
        </div>
        <div class="p-2 d-flex flex-row justify-content-between align-items-center w-100">
            <div class="px-5">
                <div class="fs-6 px-4">Hãy chia sẻ trải nghiệm của bạn</div>
            </div>
            <div class="d-flex gap-2 align-items-center px-3">
                <img src="~/content/images/camera.webp" alt="Alternate Text" width="47px" height="37px" />
                <img src="~/content/images/image.webp" alt="Alternate Text" width="47px" height="35px" />
            </div>
        </div>
    </div>
    <div class="py-3 mt-3" style="background-color:#f1f1f1">
        <div class="d-flex w-100 align-items-center p-2 gap-2">
            <div class="pe-2">
                <img src="~/content/images/KylieNguyenAvatar.png" alt="Alternate Text" class="rounded-circle" width="68px;" height="68px;" />
            </div>
            <div class="flex-row">
                <div class="fs-6 fw-bold">Kylie Nguyen</div>
                <div style="font-size:0.625rem;">Công ty TNHH  Giao nhận vận tải Quốc Tế</div>
            </div>
        </div>
        <div class="p-2 d-flex flex-row justify-content-between align-items-center w-100">
            <div class="px-5">
                <div class="fs-6 px-4">Đã có ai sử dụng dịch vụ của Perfectever chưa ạ? Cho mình xin review về dịch vụ của công ty đó nhé! Mình cảm ơn</div>
            </div>
        </div>
        <div class="d-flex gap-3 align-items-center px-3">
            <div class="d-flex gap-2 align-items-center">
                <img src="~/content/images/like.webp" alt="Alternate Text" width="35px" height="33px" />
                <div class="fs-6 px-4">Quan tâm</div>

            </div>
            <div class="d-flex gap-2 align-items-center">
                <img src="~/content/images/comment.webp" alt="Alternate Text" width="35px" height="33px" />
                <div class="fs-6 px-4">Bình luận</div>

            </div>
        </div>
    </div>
}
else
{
    <div class="py-3">
        @foreach (var user in Model)
        {
            <div class="mb-3" style="background-color:#f1f1f1">

                <div class="d-flex w-100 align-items-center p-2 gap-2">
                    <div class="pe-2">
                        <img src="~/content/images/@user.Image" alt="Alternate Text" class="rounded-circle" width="68px;" height="68px;" />
                    </div>
                    <div class="flex-row">
                        <div class="fs-6 fw-bold">@user.Name</div>
                        <div style="font-size:0.625rem;">@user.Decreption</div>
                    </div>
                    <div class="d-flex flex-row gap-2">
                        @for (int i = 0; i < user.Rate; i++)
                        {
                            <img src="~/content/images/star.png" alt="Star Icon" width="16px" height="16px" />
                        }
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-between align-items-center w-100">
                    <div class="px-5">
                        <div class="fs-6 px-4">@user.Comment</div>
                    </div>
                </div>
            </div>
        }
    </div>
}